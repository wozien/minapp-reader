.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  margin-bottom: 20px;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  display: flex;
  align-items: center;
  margin: 5px 0 10px 10px;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
}

.post-date {
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  margin: 0 10px 10px 10px;
}

.post-like {
  display: flex;
  align-items: center;
  margin-left: 10px;
}

.post-like-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8px;
}

.post-like-num {
  margin-right: 20px;
  font-size: 26rpx;
}