/* pages/detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20rpx;
    font-size: 24rpx;
  color: #999;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.static, .date {
  margin-left: 20rpx;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.icon-wrapper {
  display: flex;
  justify-content: flex-end;
  margin-right: 40rpx;
  position: relative;
}

.icon-wrapper::after {
  position: absolute;
  content: '';
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.icon {
  width: 90rpx;
  height: 90rpx;
}

.icon:first-child {
  margin-right: 30rpx;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}
