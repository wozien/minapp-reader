page {
  height: 100%;
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.motto {
  font-size: 32rpx;
  font-weight: bold;

}

.journey-wrapper {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  border: 1px solid #405f80;
  border-radius: 5px;
  margin-top: 200rpx;
}

.journey {
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
  line-height: 80rpx;
}